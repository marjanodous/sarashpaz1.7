<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/with"
    android:elevation="5dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:padding="10dp"
    app:cardCornerRadius="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item-layout_newest"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layoutDirection="rtl"
        android:background="?attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_recycler_newest"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/txt_name_newest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/img_recycler_newest"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layoutDirection="rtl"
            android:id="@+id/layout_price"
            android:layout_below="@id/txt_name_newest">
            <TextView
                android:id="@+id/rial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:text="@string/rial"/>
            <TextView
                android:id="@+id/txt_price_newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_price"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/shape_borderbox_add_newest">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_add_newest"
                android:src="@drawable/ic_add3"
                android:background="@drawable/shape_border_add_newest"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_showNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:textColor="@color/lightPrimary"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_remove_newest"
                android:src="@drawable/ic_remove"
                android:background="@drawable/shape_border_remove_newest"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>