<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@color/with"
    app:cardElevation="3dp"
    app:cardCornerRadius="0dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item-layout"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:layoutDirection="ltr"
        android:background="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/img_add_shopping"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_add2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/box_add"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp"
            android:background="@drawable/shape_borderbox_add_newest">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_add_newest"
                android:src="@drawable/ic_add3"
                android:background="@drawable/shape_border_add_newest"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_showNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:textColor="@color/lightPrimary"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_remove_newest"
                android:src="@drawable/ic_remove"
                android:background="@drawable/shape_border_remove_newest"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_recycler_off"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_border_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/img_recycler_off"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layoutDirection="rtl"
            android:layout_below="@id/txt_name">
            <TextView
                android:id="@+id/rial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:text="@string/rial"/>
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>
