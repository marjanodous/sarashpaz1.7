<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/colorText"
    android:elevation="5dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:padding="10dp"
    app:cardCornerRadius="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item-layout_bartarindastoorpokht"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layoutDirection="rtl"
        android:background="?attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_recycler_bartarinDastoorPokht"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_recycler_bartarinDastoorPokht">
            <TextView
                android:id="@+id/txt_name_bartarinDastoorPokht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:maxLength="20"
                android:text="@string/bartarinDastoorPokht"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>