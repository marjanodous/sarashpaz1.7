<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_tozihat"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimaryLight"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow"
                    android:background="@drawable/shape_border_like2"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_back_tozihat"
                    android:layout_margin="16dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_favorite2"
                    android:background="@drawable/shape_border_like"
                    android:id="@+id/img_like"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/img_tozihat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:layout_below="@id/img_tozihat"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:id="@+id/title_tozihat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mavad_lazem"
                    android:layout_below="@id/title_tozihat"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/title_mavad_lazem"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mavad_lazem"
                    android:layout_below="@id/title_mavad_lazem"
                    android:layout_alignParentRight="true"
                    android:textSize="16dp"
                    android:layout_margin="8dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:id="@+id/mavad_lazem"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tarz_tahie"
                    android:layout_below="@id/mavad_lazem"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/title_tarz_tahie"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tarz_tahie"
                    android:layout_below="@id/title_tarz_tahie"
                    android:layout_alignParentRight="true"
                    android:textSize="16dp"
                    android:layout_margin="8dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:id="@+id/tarz_tahie"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>